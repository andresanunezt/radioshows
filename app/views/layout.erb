  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Radioshows</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">
        <% flash.keys.each do | er | %>
          <h4 class="error"><%= flash[er] %></h4>
        <% end %>
        <%= yield %>

      <footer class="branding">
      <%# <img align="right" src="images/logo.png" class="img-responsive main-image"> %>
      <% if logged_in? %>
      <strong> Welcome, <a href="/djs/<%= current_dj.id%>"><%= current_dj.dj_name%> </a></strong>
      <br>
      <a href="/logout">logout</a>
      <br>
      <a href="/djs/<%= current_dj.id%>/profile">  DJ Profile </a>
      <% else %>
      <a href="/signup">signup</a><br>
      <a href="/login">login</a>
      <% end %>
        <small>&copy; 2021 <strong>Red Triangle Radio </strong></small>
        
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
